<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eg.alexu.eng.mobdev.gradprojdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.Splash"
            android:theme="@style/SplashTheme" />
        <activity
            android:name=".view.Book_Shelf_Activity"
            />
        <activity
            android:name=".view.SceneCreator"
            android:label="@string/title_Scene_Creator"
            android:parentActivityName=".view.SceneActivity" />
        <activity
            android:name=".view.SceneActivity"
            android:label="@string/title_Scene_Engine" />
        <activity
            android:name=".view.DisplayModeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_display_mode"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".view.PagerMainActivity"></activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

</manifest>